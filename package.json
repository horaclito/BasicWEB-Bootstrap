{
  "name": "proyecto1",
  "version": "1.0.0",
  "description": "primer proyecto",
  "main": "index.html",
  "dependencies": {
    "bootstrap": "^4.3.1",
    "gifsicle": "^4.0.1",
    "grunt-sass": "^3.0.2",
    "jquery": "^3.4.0",
    "open-iconic": "^1.1.1",
    "popper.js": "^1.15.0"
  },
  "scripts": {
    "dev": "lite-server",
    "start": "concurrently \"npm run watch:scss\" \"npm run dev\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "scss": "node-sass -o css/ css/",
    "watch:scss": "onchange 'css/*scss' -- npm run scss",
    "clean": "rimraf dist",
    "imagemin": "imagemin imagenes/* --out-dir=dist/imagenes",
    "usemin": "usemin index.html -d dist --htmlmin -o dist/index.html && usemin contacto.html -d dist --htmlmin -o dist/contacto.html && usemin reservas.html -d dist --htmlmin -o dist/reservas.html",
    "build": "npm run clean && npm run scss && npm run imagemin && npm run usemin"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/horaclito/proyecto1.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/horaclito/proyecto1/issues"
  },
  "homepage": "https://github.com/horaclito/proyecto1#readme",
  "devDependencies": {
    "concurrently": "^4.1.0",
    "copyfiles": "^2.1.0",
    "cssmin": "^0.4.3",
    "grunt": "^1.0.4",
    "grunt-cli": "^1.3.2",
    "grunt-contrib-sass": "^1.0.0",
    "htmlmin": "0.0.7",
    "imagemin": "^6.1.0",
    "imagemin-cli": "^4.0.1",
    "lite-server": "^2.4.0",
    "onchange": "^5.2.0",
    "rimraf": "^2.6.3",
    "ruby": "^0.6.1",
    "sass": "^1.19.0",
    "uglify-js": "^3.5.6",
    "usemin-cli": "^0.5.1"
  }
}
